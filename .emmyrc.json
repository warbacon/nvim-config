{
    "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
    "format": {
        "externalTool": {
            "program": "stylua",
            "args": [
                "-",
                "--stdin-filepath",
                "${file}"
            ],
            "timeout": 5000
        }
    },
    "diagnostics": {
        "disable": [
            "unnecessary-if"
        ]
    },
    "runtime": {
        "version": "LuaJIT",
        "requirePattern": [
            "lua/?.lua",
            "lua/?/init.lua",
            "?/lua/?.lua",
            "?/lua/?/init.lua"
        ]
    },
    "workspace": {
        "library": [
            "$VIMRUNTIME"
        ]
    }
}
